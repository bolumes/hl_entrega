<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityCommandUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MenuUserActivity"
    android:background="@color/aqua">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/big_view" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi User"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="90dp"
        android:fontFamily="@font/black_ops_one"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="110sp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/logOut"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_logout_24"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="90sp" />

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/top_view"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/clickCamera"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/baseline_photo_camera_24"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/clickSeeMenu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/baseline_restau_menu"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/clickAbout"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:src="@drawable/us3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ab.us"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/clickSettings"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/baseline_settings_24"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>



</RelativeLayout>